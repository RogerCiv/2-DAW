{% extends 'base.html.twig' %}

{% block title %}Forum index{% endblock %}

{% block body %}
    <h1>Forum index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Name</th>

            </tr>
        </thead>
        <tbody>
        {% for forum in forums %}

            <tr>
                <td>
                <a href="{{ path('app_forum_show', {'id': forum.id}) }}">{{ forum.name }}</a>

                    {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path('app_forum_edit', {'id': forum.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('app_forum_new') }}">Create new</a>
    {% endif %}
{% endblock %}
