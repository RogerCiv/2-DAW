{% extends 'base.html.twig' %}

{% block title %}Pokemon{% endblock %}

{% block body %}
    <h1>Pokemon </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pokemon.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pokemon.name }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ pokemon.number }}</td>
            </tr>
               <tr>
                <th>Imagen</th>
                <td><img src="{{ asset('uploads/imgs/' ~ pokemon.img) }}" style="width:50px;" ></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pokemon_index') }}">Volver a pokemons</a>
    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('app_pokemon_edit', {'id': pokemon.id}) }}">edit</a>
        
    {% endif %}

    {{ include('pokemon/_delete_form.html.twig') }}
{% endblock %}
